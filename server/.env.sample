# Server environment variables - copy this to server/.env and fill values
# MongoDB connection string (replace with your MongoDB URI)
MONGO_URI=mongodb://localhost:27017/smart-campus

# Port the server listens on
PORT=4000

# JWT secret used to sign application tokens (choose a strong secret)
JWT_SECRET=replace-this-with-a-strong-secret

# Allowed email domain for registration (example: klh.edu.in)
ALLOWED_EMAIL_DOMAIN=klh.edu.in

# Path to the Firebase service account JSON file (relative to server/)
# Example: FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccount.json
FIREBASE_SERVICE_ACCOUNT_PATH=

# Optionally, you can paste the entire JSON into FIREBASE_SERVICE_ACCOUNT (not recommended for git)
# FIREBASE_SERVICE_ACCOUNT={...}

# NOTE: do NOT commit your real serviceAccount.json or this file with secrets to git.